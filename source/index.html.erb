    <!-- Your cards code -->

    <div class="text-center">
      <div class="container">

      <h1>Your next trip</h1>
        <div class="row">

          <% data.flats.each do |member, flat| %>
            <div class="col-xs-12 col-sm-4 col-lg-2">
               <div class="card" style="background-image: url('<%= image_path flat.picture %>');">
                <div class="card-category"><%= flat.city %></div>
                <div class="card-description">
                  <h2><%= flat.name %></h2>
                  <p><%= flat.summary %></p>
                </div>
                 <%= image_tag "#{member}.jpg", class: "card-user avatar img-circle" %>
                <%= link_to "#", "flats/#{member}.html", class: "card-link" %>
                <p class="card-rating"><%= flat.rating %> <i class="fa fa-star" aria-hidden="true"></i>
</p>
              </div>
            </div>
          <%end%>
        </div>

       <!-- Your newsletter code -->

