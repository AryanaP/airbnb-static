<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<!-- BANNER  -->
<div class="small-banner"></div>


<!-- PERSONNE -->
  <div class="container">

      <div class="row">
        <div class="col-xs-6 col-md-3">
          <div class="text-center">
            <%= image_tag flat.owner_picture, class: "img-circle avatar-very-large" %>
            <p><%= flat.owner_name %></p>
          </div>
        </div>

        <div class="col-xs-6 col-md-3">
          <div class="text-left">
            <h3><%= flat.summary %></h3>
            <p><%= flat.city %></p>
          </div>
       </div>



<!-- FORMULAIRE -->

      <div class="col-xs-12 col-md-6">
        <div class="wrapper-grey-form">

          <form action="#">
            <h2>Book this flat</h2>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input class="form-control" placeholder="checkin" id="checkin" type="text">
                </div>
                <div class="col-xs-6">
                  <input class="form-control" placeholder="checkout" type="text">
                </div>
              </div>
            </div>

            <div class="form-group">
              <select class=form-control>
                <option value=un>1 guest</option>
                <option value=deux>2 guest</option>
                <option value=trois>3 guest</option>
              </select>
            </div>
            <input class="btn btn-danger" value="Book it" style="width: 100%" type="submit">
          </form>


        </div>
      </div>
    </div>
  </div>
          <!-- PIED PAGE -->



